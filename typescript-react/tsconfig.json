{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ESNext",
    "module": "esnext",
    "jsx": "react-jsx",
    
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,

    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    
    "skipLibCheck": true,
    "moduleResolution": "node",

    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
  ]
}
